{
  "name": "mrpt-web-js",
  "version": "1.0.0",
  "description": "JavaScript Library containing websocket server connection modules and 2d and 3d visualisation modules.",
  "main": "src/MRPTLib.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register tests/*.test.js -w",
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename MRPTLib.umd.js",
    "build:umd.min": "webpack --output-filename MRPTLib.umd.min.js -p"
  },
  "keywords": [
    "MRPT",
    "WebSocket",
    "RPC",
    "Visualisation"
  ],
  "author": "Rachit Tibrewal",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-env": "^2.4.1",
    "babel-loader": "^7.1.4",
    "chai": "^4.1.2",
    "jest": "^23.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "three": "^0.93.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "eventemitter2": "^5.0.1",
    "net": "^1.0.2",
    "three": "^0.93.0",
    "tls": "0.0.1",
    "window-or-global": "^1.0.1",
    "ws": "^5.2.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
